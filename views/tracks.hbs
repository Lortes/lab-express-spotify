<div class=" p-4 text-center" style="background-color: rgb(22, 22, 22); height:100vh">
    <h1 style="color: white;">TRACKS</h1>
    <hr>

    <div class="container">

        <div class="row d-flex justify-content-around">

            {{#each tracksData}}
            <div class="col-md-4 p-4 mb-2">

                <article class="card p-3 mb-3">
                    <p> {{name}} </p>
                    <audio src="{{preview_url}}" controls></audio>
                </article>
            </div>
            {{/each}}

        </div>

    </div>
</div>